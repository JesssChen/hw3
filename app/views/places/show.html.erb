<!-- Place details page -->

<h1><%= @place["name"] %></h1>

<ul>
  <%for post in @entry %>
    <h2><%=post["title"]%></h2>
    <p><%=post["posted_on"]%></p>
    <p><%=post["description"]%></p>
  <% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%=@place["id"]%>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>